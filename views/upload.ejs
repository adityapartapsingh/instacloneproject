<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Upload â€¢ Insta Clone</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    body{font-family:Inter,system-ui,Arial,sans-serif;background:#fafafa;margin:0;display:flex;align-items:center;justify-content:center;height:100vh}
    .card{background:#fff;border:1px solid #e6e6e6;padding:28px;border-radius:8px;width:560px}
    input[type=text]{width:100%;padding:10px;border:1px solid #dbdbdb;border-radius:6px}
    .btn{padding:10px 14px;border-radius:6px;background:#3897f0;color:#fff;border:0;cursor:pointer}
  </style>
</head>
<body>
  <div class="card">
    <h2 style="margin:0 0 12px 0">Create Post</h2>
    <% if (errors && errors.length) { %>
      <div style="background:#ffe6e6;color:#8b0000;padding:10px;border-radius:6px;margin-bottom:12px">
        <% errors.forEach(function(err){ %>
          <div><%= err %></div>
        <% }) %>
      </div>
    <% } %>
    <form action="/create" method="POST" enctype="multipart/form-data">
      <div style="margin-bottom:12px">
        <input type="text" name="caption" placeholder="Write a caption...">
      </div>
      <div style="margin-bottom:12px">
        <input type="file" name="postImage" accept="image/*">
      </div>
      <div style="display:flex;gap:8px;align-items:center">
        <button class="btn" type="submit">Upload</button>
        <a href="/" style="padding:10px 14px;border-radius:6px;border:1px solid #ddd;text-decoration:none;color:#111">Cancel</a>
      </div>
    </form>
  </div>
</body>
</html>
